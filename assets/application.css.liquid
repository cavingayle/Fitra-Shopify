:root {
  --main-font: 'Rubik', 'Helvetica Neue', Arial, Helvetica, sans-serif;
  --black: #000000;
  --white: #ffffff;
  --color-accent: #ff3700;
  --color-text: #555555;
  --color-border: #dedede;
  --color-label: #707070;

  --line-global: 20px;
  --gutter-global: calc(var(--line-global) * 2);

  --body-font-size: 15px;
  --label-font-size: 12px;

  --standard-border: 1px solid var(--color-border);
  --black-border: 1px solid var(--black);
}

* {
  font-family: var(--main-font);
  box-sizing: border-box;
}

html,
body {
  width: 100%;
  margin: 0;
  padding: 0;
  color: var(--black);
  line-height: var(--line-global);
}

body {
  font-size: var(--body-font-size);
  background-color: var(--white);
  
}

h1,
h2,
h3,
h4,
h5,
h6,
p,
ul,
ol {
  margin: 0;
  padding: 0;
  font-weight: 400;
}

h2 {
  font-size: calc(var(--body-font-size) * 2);
  line-height: calc(var(--line-global) * 2);
}

h3 {
  font-size: var(--body-font-size);
  line-height: var(--line-global);
}

p,
ul,
ol {
  font-size: var(--body-font-size);
  line-height: var(--line-global);
  color: var(--color-text);
}

label {
  font-size: var(--label-font-size);
  color: var(--color);
}

a {
    text-decoration: none;
}

button,
.styled-select select {
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  -ms-appearance: none;
  cursor: pointer;
  background: transparent;
  border: none;
  border-radius: 0;
  width: auto;
  margin: 0;
  padding: 0;
  line-height: normal;
  -webkit-font-smoothing: inherit;
  -moz-osx-font-smoothing: inherit;
  text-align: left;
}

.styled-select {
  position: relative;
}

.styled-select select {
  width: 100%;
  font-size: var(--body-font-size);
  line-height: var(--line-global);
  padding: var(--line-global);
  border: var(--black-border);
}

.styled-select .select-arrow {
  position: absolute;
  top: 1px;
  right: 1px;
  bottom: 1px;
  width: calc(var(--line-global) * 3);
  background: var(--white);
  text-align: center;
  line-height: calc(var(--line-global) * 3);
  border-left: var(--black-border);
  pointer-events: none;
}

.styled-select .select-arrow img {
  display: inline-block;
  vertical-align: middle;
  width: 16px;
  height: 16px;
}

button {
  width: 100%;
  font-size: var(--body-font-size);
  line-height: var(--line-global);
  padding: var(--line-global);
  background: var(--color-accent);
  color: var(--white);
}

.headline-big {
  font-size: 22vw;
  line-height: 1;
}

.list-with-stroke {
  list-style-type: none;
}

.list-with-stroke li {
  padding: var(--line-global) 0;
  border-top: var(--standard-border);
}
.list-with-stroke li:last-child {
  border-bottom: var(--standard-border);
}
/* Utility Classes */

.grid {
  display: grid;
  grid-column-gap: var(--gutter-global);
  grid-row-gap: var(--gutter-global);
}

/* Index Styles */

.grid {
  display: grid;
}

.two-columns {
  grid-template-columns: 1fr 1fr;
}

.vallign-center {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.vallign-bottom {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.main-content {
  min-height: 100vh;
  padding: var(--gutter-global);
  width: calc(50% + (var(--gutter-global) / 2));
  margin-left: auto;
}

.sticky-side-image {
  position: fixed;
  left: 0;
  top: var(--gutter-global);
  bottom: var(--gutter-global);
  width: calc(50% - (var(--gutter-global) / 2));
}

.sticky-side-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
/* Global Styles */

.link-to-cart {
    position: fixed;
    top: 0;
    right: 0;
    padding: var(--gutter-global)
}
/* Index Styles */

#product-info {
  grid-template-rows: minmax(max-content, auto) minmax(min-content, max-content);
}

#product-info-content {
  grid-row-gap: calc(var(--gutter-global) / 2);
}

.headline {
  padding-bottom: calc(var(--line-global) * 3);
}

.single-product-image {
  width: 100%;
  height: 100%;
}

.description-content {
  margin-top: var(--line-global);
}

.form-wrapper {
  padding-top: calc(var(--line-global) * 3);
}

#add-to-cart-button .product-price {
  float: right;
}

#add-to-cart-forum {
  margin-top: calc(var(--line-global) * -1);
}
