<h1>Cart

<span class="cart-item-count">
{{cart.item_count }}

</span>
</h1>
{% if cart.item_count > 0 %}
<h2>{{ 'cart.lines.title' | t}} </h2>
  <form action="/cart" method="post" novalidate>
    <table>
      <thead>
        <th colspan="2">Order Summary </th>

      </thead>
      <tbody>
        {% for item in cart.items %}
          <tr>
            
            <td>
              {% if item.quantitiy >  1 %} {{item.quantity}} x {% endif %} {{ item.product.title }}
               &ndash;
              {{ item.variant.title }}
            </td>
            
            <td>
              {{ item.line_price | money }}
              <a href="/cart/change?line={{ forloop.index }}&amp;quantity=0">X</a>

            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
    <table id="cart-totals">
        <tbody>
          <tr>
            <td>{{'cart.lines.shipping' | t }}</td>
            <td>{{'cart.lines.free' | t }}</td>
          </tr>
          <tr>
            <td>{{'cart.lines.subtotal' | t }}</td>
            <td>{{ cart.total_price | money }}</td>
          </tr>
        </tbody>
    </table>

    <button type="submit" name="checkout">{{'cart.lines.checkout' | t }}</button>

    
  </form>

  <p>
    {{'cart.lines.title' | t }}
    <br>
    <a href="mailto:support@getfitra.com">support@getfitra.com</a>
    
  </p>

{% else %}
{{'cart.general.empty' | t }}

  {% for i in (1..3) %}
  {% endfor %}

  <a href="/">Back to Fitra</a>
{% endif %}
