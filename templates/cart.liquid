<div id="page-cart">

  <div  class="sticky-side-image">
    <img src={{'Hero-Cart.jpg' | asset_url}} alt="">

  </div>


  <div id="cart" class="main-content grid {% if cart.item_count > 0 %}cart-filled{% endif %}">
    <div class="vallign-center">
      <h1 id="cart-title" class="headline-big">Cart

        <span class="cart-item-count">
        {{cart.item_count }}
        
        </span>
        </h1>
    </div>
    
    
    <div id="cart-content" class="grid two-columns">
      {% if cart.item_count > 0 %}   
      <div class="vallign-bottom">
        <h2>{{'cart.general.preorder_info' | t}} </h2>
      </div>
        <div id="cart-form-wrap">
        <form action="/cart" method="post" novalidate>
          <table  id="cart-lines">
            <thead>
              <th colspan="2">{{ 'cart.lines.title' | t}}</th>
      
            </thead>
            <tbody>
              {% for item in cart.items %}
                <tr>
                  
                  <td>
                    {% if item.quantitiy >  1 %} {{item.quantity}} x {% endif %} {{ item.product.title }}
                     &ndash;
                    {{ item.variant.title }}
                  </td>
                  
                  <td>
                    {{ item.line_price | money }}
                    <a class="remove-line" href="/cart/change?line={{ forloop.index }}&amp;quantity=0">
                      <span class="remove-text">{{ 'cart.lines.remove' | t }}</span>
                        <img class="remove-x" src={{'icon-x.svg' | asset_url}} alt="">
                    </a>
      
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
          <table id="cart-totals">
              <tbody>
                <tr>
                  <td>{{'cart.lines.shipping' | t }}</td>
                  <td>{{'cart.lines.free' | t }}</td>
                </tr>
                <tr>
                  <td>{{'cart.lines.subtotal' | t }}</td>
                  <td>{{ cart.total_price | money }}</td>
                </tr>
              </tbody>
          </table>
      
          <button id="checkout-button" type="submit" name="checkout">{{'cart.lines.checkout' | t }}</button>
      
          
       </form>
      </div>
      <div id="cart-support">
        <p>
          {{'cart.lines.title' | t }}
          <br>
          <a href="mailto:support@getfitra.com">support@getfitra.com</a>
          
        </p>
      </div>

      
      {% else %}
      <div id="cart-empty-lines">
        {{'cart.general.empty' | t }}
      
        {% for i in (1..3) %}
        <div class="empty-line"></div>
        {% endfor %}
      </div>
      
      <div id="back-to-fitra" class="vallign-bottom">
        <a href="/">{{'cart.general.back' | t}}</a>

      </div>
      {% endif %}
    </div>
  </div>

</div>

